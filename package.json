{
    "name": "wormhole",
    "version": "1.0.0",
    "description": "A P2P desktop portal for video streaming and file transfer",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "server": "node server.js",
        "dev": "concurrently \"npm run server\" \"npm run start\"",
        "build": "electron-builder --win --x64",
        "build:dir": "electron-builder --win --x64 --dir",
        "package": "electron-packager . Wormhole --platform=win32 --arch=x64 --out=build --overwrite --ignore=node_modules/electron-builder --ignore=server-deploy --ignore=dist"
    },
    "keywords": [
        "electron",
        "webrtc",
        "p2p",
        "file-transfer",
        "video-chat"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^8.2.2",
        "electron": "^28.0.0",
        "electron-builder": "^24.13.3",
        "electron-packager": "^17.1.2"
    },
    "dependencies": {
        "ws": "^8.16.0"
    }
}